<div class="container post_show" id="post_content">
  <%= link_to "Back", root_path %>
  <h1 class ="title">
    <%= @post.title %>
  </h1>
  <p></p>
  <h4>
    <%= @post.list.name %>
  </h4>
  <div class="container" id= "body">
        <div id="div_i_0">
          <div id="div_i_1" >
            <%= image_tag @post.image.url(:medium) %>
          </div>
          <div id="div_i_2">
            <h3>
              <%= @post.name %>
            </h3>
            <%= @post.context %>
          </div>
        </div>
    <p class="date">
      <% if user_signed_in? %>
        Submitted <%= time_ago_in_words(@post.created_at) %> ago
        | <%= link_to 'Edit', edit_post_path(@post) %>
        | <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </p>
  </div id="comments">
  <h2>
    <%= @post.comments.count %>
    Comments
  </h2>
  <%= render @post.comments %>
  <h3>Add a comment:</h3>
  <%= render "comments/form" %>
</div>
