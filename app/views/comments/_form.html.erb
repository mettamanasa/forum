<%= form_for [@post, @post.comments.build]  do |f| %>
  <% if @post.comments.build.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@post.comments.build.errors.count, "error") %> prevented this post from saving</h2>
        <ul>
            <% @post.comments.build.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
  <% end %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter  %><br>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, placeholder: "Please enter a comment" %><br>
  </p>
  <p>
  	<%= f.submit %>
  </p>
<% end %>
